@model IEnumerable<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Products List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th class="w-25">
                    Title
                </th>
                <th class="w-25">
                    Price
                </th>
                <th class="w-25">
                    Details
                </th>
                <th class="w-25">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var product in Model.OrderBy(_ => _.Id))
            {
                <tr>
                    <td>@product.Title</td>
                    <td>
                        @product.Price.ToString("c")
                    </td>
                    <td>
                        @product.Details
                    </td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>